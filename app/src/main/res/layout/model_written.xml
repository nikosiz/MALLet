<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/written_mainCv"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_gravity="center"    android:layout_margin="20dp"    android:orientation="vertical"    android:padding="10dp">    <TextView        android:id="@+id/written_questionTv"        style="@style/BasicBoldTextStyle"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_gravity="center"        android:layout_weight="1"        android:autoSizeMaxTextSize="30sp"        android:autoSizeMinTextSize="10sp"        android:autoSizeStepGranularity="2sp"        android:autoSizeTextType="uniform"        android:gravity="center_vertical"        android:maxLines="10"        android:padding="20dp"        android:text="@string/content_written_question"        android:textColor="@color/primaryTextColor"        android:textSize="25sp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="bottom"        android:background="@drawable/bg_corners_rounded"        android:gravity="bottom"        android:orientation="vertical"        android:padding="20dp">        <TextView            style="@style/BasicTextStyle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="@string/your_answer"            android:textColor="@color/colorPrimary"            android:textSize="20sp" />        <View            android:layout_width="match_parent"            android:layout_height="10dp" />        <com.google.android.material.textfield.TextInputLayout            android:id="@+id/written_answerTil"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:paddingHorizontal="5dp"            android:paddingBottom="5dp"            android:theme="@style/TextInputLayoutStyle"            app:boxBackgroundColor="@null"            app:boxBackgroundMode="outline"            app:boxCornerRadiusBottomEnd="10dp"            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@drawable/text_input_layout"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/written_answerEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_answer"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/written_answerErrorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="5dp"

                android:text="@string/field_cannot_be_empty"
                android:textColor="@color/accentPrimary"
                android:visibility="gone" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/written_correctAnswersLl"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/written_correctAnswersTitleTv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/russo_one_regular"

                android:text="Correct answers:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/written_correctAnswersTv"
                style="@style/BasicTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>