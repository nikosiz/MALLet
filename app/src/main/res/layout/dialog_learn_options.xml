<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/learnOptions_mainLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/learnOptionsLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/learnOptions_multipleChoiceMs"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:contentDescription="True/False switch"
            android:fontFamily="@font/rem_bold"
            android:minHeight="65dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:text="Multiple choice questions"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:thumbTint="@drawable/switch_thumb_color"
            app:trackDecorationTint="@drawable/switch_track_decoration_color"
            app:trackTint="@drawable/switch_track_color" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/learnOptions_writtenMs"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:contentDescription="True/False switch"
            android:fontFamily="@font/rem_bold"
            android:minHeight="65dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:text="Written questions"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:thumbTint="@drawable/switch_thumb_color"
            app:trackDecorationTint="@drawable/switch_track_decoration_color"
            app:trackTint="@drawable/switch_track_color" />


        <LinearLayout
            android:id="@+id/learnOptions_formatLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="65dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView android:justificationMode="inter_word"
                android:id="@+id/learnOptions_formatTitleTv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Question format"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView android:justificationMode="inter_word"
                android:id="@+id/learnOptions_formatTv"
                style="@style/BasicTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T/D/B"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <TextView android:justificationMode="inter_word"
            android:id="@+id/learnOptions_restartTv"
            style="@style/BasicBoldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:drawablePadding="35dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:text="Restart"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:drawableEndCompat="@drawable/ic_restart"
            app:drawableTint="@color/colorPrimary" />


        <TextView android:justificationMode="inter_word"
            android:id="@+id/learnOptions_errorTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Select at least one type of questions"
            android:textColor="@color/carnation_red_600"
            android:visibility="gone" />

        <TextView android:justificationMode="inter_word"
            android:id="@+id/learnOptions_startTv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="end"
            android:padding="10dp"
            android:text="Start learning"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:drawableTint="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>