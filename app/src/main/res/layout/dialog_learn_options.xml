        <TextView
            android:id="@+id/learnOptions_restartTv"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/rem_bold"
            android:gravity="center_vertical"

            android:padding="20dp"
            android:paddingHorizontal="10dp"
            android:text="Restart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/ic_restart"
            app:drawableTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/learnOptions_errorTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingHorizontal="10dp"
            android:text="Select at least one type of questions"
            android:textColor="@color/accentPrimary"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/learnOptions_startTv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="end"

            android:padding="10dp"
            android:text="Start learning"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:drawableTint="@color/colorPrimaryDark" />
    </LinearLayout>
