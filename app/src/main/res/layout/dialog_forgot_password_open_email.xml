<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forgotPasswordOpenEmail_mainLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corners_rounded"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp">

    <TextView android:justificationMode="inter_word"
        android:id="@+id/forgotPasswordOpenEmail_titleTv"
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Reset password"
        android:textColor="@color/primaryTextColor"
        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView android:justificationMode="inter_word"
        android:id="@+id/forgotPasswordOpenEmailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open your email client and click the link we sent you to reset password"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView android:justificationMode="inter_word"
        android:id="@+id/forgotPasswordOpenEmail_openTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_ripple"
        android:text="Open email"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        app:drawableTint="@color/danube_blue_800" />


    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>