<!-- res/layout/card_group.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/model_learning_set_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_social_btn"
    android:clickable="true"
    android:focusable="true"
    android:minWidth="300dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    card_view:strokeColor="@color/danube_blue_800">

    <LinearLayout
        android:id="@+id/learning_set_model_cv_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/learning_set_model_name_tv"
            style="@style/BasicBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:singleLine="true"
            android:text="set_name"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/learning_set_model_terms_tv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:singleLine="true"
            android:text="number_of_terms"
            android:textColor="@color/danube_blue_500"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/learning_set_model_creator_tv"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="creator_name"
            android:textColor="@color/secondaryTextColor"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_profile"
            app:drawableTint="@color/danube_blue_800" />
    </LinearLayout>
</androidx.cardview.widget.CardView>