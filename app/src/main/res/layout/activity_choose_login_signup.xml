<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChooseLogInSignUpActivity">

    <View
        android:id="@+id/choose_view_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/splash_log_in_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/log_in"
        android:textColor="@color/viking_blue_500"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@id/splash_sign_up_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_view_1"
        app:strokeColor="@color/viking_blue_500"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/splash_sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Sign up"
        android:textColor="@color/viking_blue_500"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_log_in_btn"
        app:strokeColor="@color/viking_blue_500"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/splash_no_login_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@android:color/transparent"
        android:text="no login"
        android:textColor="@color/viking_blue_500"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_sign_up_btn"
        app:strokeColor="@color/viking_blue_500"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>