<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corners_rounded"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/create_new_create_set"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:drawablePadding="35dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/create_new_set"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_create_set"
        app:drawableTint="@color/danube_blue_800" />

    <TextView
        android:id="@+id/create_new_create_folder"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"

        android:autoSizeTextType="uniform"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:drawablePadding="35dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/create_new_folder"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_create_folder"
        app:drawableTint="@color/danube_blue_800" />

    <TextView
        android:id="@+id/create_new_create_group"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:background="@drawable/bg_ripple"

        android:clickable="true"
        android:drawablePadding="35dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/create_new_group"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_create_group"
        app:drawableTint="@color/danube_blue_800" />

</LinearLayout>