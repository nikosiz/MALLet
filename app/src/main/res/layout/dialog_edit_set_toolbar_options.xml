<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editSetToolbarOptions_mainLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/editSetToolbarOptions_toolbarLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/editSetToolbarOptions_backIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:contentDescription="toolbar options"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editSetToolbarOptionsLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/editSetToolbarOptions_addToFolderTv"
            style="@style/BasicBoldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:gravity="center_vertical"

            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:text="Add to folder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_folder"
            app:drawableTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/editSetToolbarOptions_addToGroupTv"
            style="@style/BasicBoldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:gravity="center_vertical"

            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:text="Add to group"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_create_group"
            app:drawableTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/editSetToolbarOptions_deleteTv"
            style="@style/BasicBoldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:gravity="center_vertical"

            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:text="Delete"
            android:textColor="@color/accentPrimary"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_delete"
            app:drawableTint="@color/accentPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/editSetToolbarOptions_cancelTv"
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"

        android:padding="30dp"
        android:text="Cancel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />
</LinearLayout>
