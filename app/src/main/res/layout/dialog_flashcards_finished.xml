<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flashcardsFinished_mainLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_top_corners_rounded"
    android:orientation="vertical"
    android:padding="30dp">


    <TextView
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/russo_one_regular"
        android:text="Congratulations!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You've completed the review of all the flashcards! ðŸŽ‰ Your dedication to learning is truly commendable ðŸŒŸ
        \n\nTake a moment to celebrate your progress and feel free to continue exploring more topics to deepen your knowledge ðŸš€ \n\nRemember, every bit of learning brings you closer to your goals ðŸ“š"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/russo_one_regular"
        android:gravity="center"
        android:text="Keep up the excellent work!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/flashcardsFinished_finishTv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="end"
            android:padding="10dp"
            android:text="Leave"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flashcardsFinished_restartTv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_restart"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:focusable="true"
            android:gravity="end"
            android:padding="10dp"
            android:text="Restart"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>