<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp">


    <TextView
        android:id="@+id/group_toolbar_options_invite"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_invite_members"
        android:drawablePadding="35dp"
        android:drawableTint="@color/danube_blue_800"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Invite members"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/group_toolbar_options_manage"

        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="35dp"
        android:drawableTint="@color/danube_blue_800"

        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Manage"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/group_toolbar_options_leave"

        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="35dp"
        android:drawableTint="@color/danube_blue_800"

        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Leave group"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/group_toolbar_options_report"

        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_report"
        android:drawablePadding="35dp"
        android:drawableTint="@color/carnation_red_300"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Report"
        android:textColor="@color/carnation_red_300"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>