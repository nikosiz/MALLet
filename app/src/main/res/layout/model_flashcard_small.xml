<!-- res/layout/card_folder.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/model_flashcard_small_cv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_social_btn"
    android:clickable="true"
    android:focusable="true"
    android:minWidth="300dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    card_view:strokeColor="@color/danube_blue_800">

    <LinearLayout
        android:id="@+id/model_flashcard_small_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/model_flashcard_small_word_tv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:singleLine="true"
            android:text="flashcard_word"
            android:textColor="@color/danube_blue_900"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/model_flashcard_small_definition_tv"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:autoSizeMaxTextSize="25sp"

            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:singleLine="true"
            android:text="flashcard_definition"
            android:textColor="@color/danube_blue_900"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>