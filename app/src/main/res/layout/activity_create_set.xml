<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreateSet">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/create_set_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/BasicBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/create_new_set"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/create_set_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_check"
            app:tint="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/create_set_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_set_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_set_fl_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_set_name_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/colorSecondaryDark"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="45"
                app:counterTextAppearance="@style/BasicTextStyle"
                app:errorEnabled="true"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_set_name_et"
                    style="@style/BasicTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Set name"
                    android:maxLength="45"
                    android:textSize="20sp"
                    app:boxStrokeColor="@color/colorSecondaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/create_set_0"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@id/create_set_name_til" />

            <LinearLayout
                android:id="@+id/create_set_add_description_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/create_set_0">

                <ImageView
                    android:id="@+id/create_set_add_description_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:contentDescription="add description"
                    android:src="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/create_set_add_description_tv"
                    style="@style/BasicTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/create_set_1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/create_set_add_description_ll" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_set_description_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/colorSecondaryDark"
                app:boxStrokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/create_set_1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_set_description_et"
                    style="@style/BasicTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/description"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:textSize="20sp"
                    app:boxStrokeColor="@color/colorSecondaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>