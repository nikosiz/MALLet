<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/folder_toolbar_options_edit"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_ripple"
        android:drawablePadding="35dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Edit"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_edit"
        app:drawableTint="@color/danube_blue_800" />

    <TextView
        android:id="@+id/folder_toolbar_options_add"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_ripple"
        android:drawablePadding="35dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Delete"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_delete"
        app:drawableTint="@color/danube_blue_800" />

    <TextView
        android:id="@+id/folder_toolbar_options_share"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_ripple"
        android:drawablePadding="35dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Share"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_share"
        app:drawableTint="@color/danube_blue_800" />

    <TextView
        android:id="@+id/folder_toolbar_options_delete"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_ripple"
        android:drawablePadding="35dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Delete"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_delete"
        app:drawableTint="@color/danube_blue_800" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>