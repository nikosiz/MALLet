<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modelAddMemberToGroup_mainLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/modelAddMemberToGroup_usernameTv"
        style="@style/BasicTextStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="username"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_profile"
        app:drawableTint="@color/colorPrimaryDark" />

    <CheckBox
        android:id="@+id/addMemberToGroupCb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_toolbar_options" />
</LinearLayout>