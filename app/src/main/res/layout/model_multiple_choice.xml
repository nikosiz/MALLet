<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleChoice_mainCv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <TextView
        android:id="@+id/multipleChoice_questionTv"
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="10dp"
        android:text="content of the abcd question: term OR definition/translation"
        android:textColor="@color/primaryTextColor"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_corners_rounded"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/multipleChoiceTv"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the correct option"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/multipleChoice_option1Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_social_btn"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:text="Option 1"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_one"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/multipleChoice_option2Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_social_btn"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:text="Option 2"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_two"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/multipleChoice_option3Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_social_btn"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:text="Option 3"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_three"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/multipleChoice_option4Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_social_btn"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:text="Option 4"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_four"
                app:drawableTint="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>