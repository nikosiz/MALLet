<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleChoice_mainCv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <TextView
        android:id="@+id/multipleChoice_questionTv"
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="content of the abcd question: term OR definition/translation"
        android:textColor="@color/primaryTextColor"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_corners_rounded"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/multipleChoiceTv"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Choose the correct answer"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/multipleChoice_answerABtn"
                style="@style/SocialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="Option 1"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/multipleChoice_answerBBtn"
                style="@style/SocialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="Option 2"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/multipleChoice_answerCBtn"
                style="@style/SocialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="Option 3"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/multipleChoice_answerDBtn"
                style="@style/SocialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="Option 4"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>