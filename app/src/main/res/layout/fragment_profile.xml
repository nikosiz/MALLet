<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_mainSv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".FragmentProfile"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/profileNsvLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/profile_userPhotoIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:contentDescription="@string/profile_photo"
            android:focusable="true"
            android:src="@drawable/ic_user"
            app:tint="@color/colorPrimary"
            tools:ignore="ImageContrastCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:elevation="1dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_emailLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ripple_white_rect"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp">

                    <TextView android:justificationMode="inter_word"
                        android:id="@+id/profile_emailTitleTv"
                        style="@style/BasicBoldTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/email"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp" />

                    <TextView android:justificationMode="inter_word"
                        android:id="@+id/profile_emailTv"
                        style="@style/BasicSubTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@string/email"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_usernameLll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ripple_white_rect"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp">

                    <TextView android:justificationMode="inter_word"
                        android:id="@+id/profile_usernameTitleTv"
                        style="@style/BasicBoldTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/username"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp" />

                    <TextView android:justificationMode="inter_word"
                        android:id="@+id/profile_usernameTv"
                        style="@style/BasicSubTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@string/username"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView android:justificationMode="inter_word"
                    android:id="@+id/profile_changePasswordTv"
                    style="@style/BasicBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ripple_white_rect"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:paddingHorizontal="30dp"
                    android:text="@string/change_password"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"

            android:elevation="1dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/profile_notificationsMs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:contentDescription="@string/notifications_switch"
                    android:drawableTint="@color/downriver_blue_500"
                    android:fontFamily="@font/rem_bold"
                    android:minHeight="65dp"
                    android:paddingHorizontal="30dp"
                    android:text="@string/notifications"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:thumbTint="@drawable/switch_thumb_color"
                    app:trackDecorationTint="@drawable/switch_track_decoration_color"
                    app:trackTint="@drawable/switch_track_color" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/profile_saveOfflineMs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:contentDescription="@string/save_sets_offline"
                    android:drawableTint="@color/downriver_blue_500"
                    android:fontFamily="@font/rem_bold"
                    android:minHeight="65dp"
                    android:paddingHorizontal="30dp"
                    android:text="@string/save_sets_offline"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:thumbTint="@drawable/switch_thumb_color"
                    app:trackDecorationTint="@drawable/switch_track_decoration_color"
                    app:trackTint="@drawable/switch_track_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/profile_themeLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_ripple_white_rect"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="65dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="30dp"
                        android:weightSum="3">

                        <TextView android:justificationMode="inter_word"
                            android:id="@+id/profile_themeTitleTv"
                            style="@style/BasicBoldTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="@string/color_theme"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="16sp" />

                        <TextView android:justificationMode="inter_word"
                            android:id="@+id/profile_themeTv"
                            style="@style/BasicSubTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:gravity="end"
                            android:text="@string/theme_name"
                            android:textColor="@color/danube_blue_700"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView android:justificationMode="inter_word"
                        android:id="@+id/profile_aboutTv"
                        style="@style/BasicBoldTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_ripple_white_rect"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"
                        android:paddingHorizontal="30dp"
                        android:text="@string/about"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"

            android:elevation="1dp"
            app:cardCornerRadius="10dp">

            <TextView android:justificationMode="inter_word"
                android:id="@+id/profile_logoutTv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_white_rect"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/log_out"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:elevation="1dp"
            app:cardCornerRadius="10dp">

            <TextView android:justificationMode="inter_word"
                android:id="@+id/profile_deleteAccTv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_red_rect"
                android:gravity="center"
                android:minHeight="65dp"
                android:text="@string/delete_account"
                android:textColor="@color/carnation_red_700"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</ScrollView>