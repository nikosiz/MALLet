<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danube_blue_50"
    tools:context=".FragmentProfile"
    tools:ignore="Overdraw">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <View
                android:id="@+id/profile_view_0"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/profile_user_photo_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="50dp"
                android:clickable="true"
                android:contentDescription="@string/profile_photo"
                android:focusable="true"
                android:src="@drawable/ic_user"
                app:tint="@color/danube_blue_200" />

            <View
                android:id="@+id/profile_view_1"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:id="@+id/profile_email_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_white_rect"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:orientation="vertical"
                android:paddingHorizontal="30dp">

                <TextView
                    style="@style/BasicBoldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/email"
                    android:textColor="@color/danube_blue_900"
                    android:textSize="16sp" />

                <TextView
                    style="@style/BasicSubTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="@string/email"
                    android:textColor="@color/danube_blue_700"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_username_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_white_rect"
                android:gravity="center_vertical"

                android:minHeight="65dp"
                android:orientation="vertical"
                android:paddingHorizontal="30dp">

                <TextView
                    android:id="@+id/profile_username_title"
                    style="@style/BasicBoldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/username"

                    android:textColor="@color/danube_blue_900"
                    android:textSize="16sp" />

                <TextView
                    style="@style/BasicSubTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="@string/username"

                    android:textColor="@color/danube_blue_700"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/profile_changePasswordTv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_white_rect"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/change_password"
                android:textColor="@color/danube_blue_900"
                android:textSize="16sp" />

            <View
                android:id="@+id/profile_view_2"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/profile_notifications_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="@string/notifications_switch"
                android:drawableTint="@color/downriver_blue_500"
                android:fontFamily="@font/rem_bold"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/notifications"
                android:textColor="@color/danube_blue_900"
                android:textSize="16sp"
                app:thumbTint="@drawable/switch_thumb_color"
                app:trackDecorationTint="@drawable/switch_track_decoration_color"
                app:trackTint="@drawable/switch_track_color" />

            <View
                android:id="@+id/profile_view_3"
                android:layout_width="match_parent"
                android:layout_height="5dp" />


            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/profile_save_offline_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="@string/save_sets_offline"
                android:drawableTint="@color/downriver_blue_500"
                android:fontFamily="@font/rem_bold"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/save_sets_offline"
                android:textColor="@color/danube_blue_900"
                android:textSize="16sp"
                app:thumbTint="@drawable/switch_thumb_color"
                app:trackDecorationTint="@drawable/switch_track_decoration_color"
                app:trackTint="@drawable/switch_track_color" />


            <View
                android:id="@+id/profile_view_4"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/profile_theme_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_ripple_white_rect"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="65dp"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:weightSum="3">

                <TextView
                    style="@style/BasicBoldTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/color_theme"
                    android:textColor="@color/danube_blue_900"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_theme_system_default_tv"
                    style="@style/BasicSubTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:text="System default"
                    android:textColor="@color/danube_blue_700"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_theme_light_tv"
                    style="@style/BasicSubTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:text="Light"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/profile_theme_dark_tv"
                    style="@style/BasicSubTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:text="Dark"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/profile_view_5"
                android:layout_width="match_parent"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/profile_aboutTv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_white_rect"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/about"
                android:textColor="@color/danube_blue_900"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/profile_version_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:orientation="vertical"
                android:paddingHorizontal="30dp">

                <TextView
                    style="@style/BasicBoldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/version"

                    android:textColor="@color/danube_blue_900"
                    android:textSize="16sp" />

                <TextView
                    style="@style/BasicSubTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="@string/app_version"
                    android:textColor="@color/danube_blue_700"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/profile_view_7"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/profile_log_out_tv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_white_rect"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/log_out"
                android:textColor="@color/danube_blue_900"
                android:textSize="16sp" />

            <View
                android:id="@+id/profile_view_6"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/profile_delete_account_tv"
                style="@style/BasicBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_red_rect"
                android:gravity="center"
                android:minHeight="65dp"
                android:paddingHorizontal="30dp"
                android:text="@string/delete_account"
                android:textColor="@color/carnation_red_400"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
