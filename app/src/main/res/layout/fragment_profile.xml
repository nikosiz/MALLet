<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:contentDescription="Profile photo cl"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Profile photo"
                    android:src="@drawable/ic_user"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/downriver_blue_500" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/downriver_blue_100"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_email_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="bottom"
                        android:text="@string/email" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="top"
                        android:text="@string/email"
                        android:textColor="@color/downriver_blue_400" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_username_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical"

                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_email_ll">

                    <TextView
                        android:id="@+id/profile_username_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="bottom"
                        android:text="@string/username" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="top"
                        android:text="@string/username"
                        android:textColor="@color/downriver_blue_200" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_change_password_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:gravity="center_vertical"

                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_username_ll">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center_vertical"
                        android:text="@string/change_password" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_notifications_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_change_password_ll">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center_vertical"
                        android:text="@string/notifications" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/downriver_blue_100"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_your_languages_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="bottom"
                        android:text="@string/your_languages"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="top"
                        android:text="@string/users_languages"
                        android:textColor="@color/downriver_blue_200"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_username_title" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_save_offline_switch_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/downriver_blue_100"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_save_offline_switch_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/profile_save_offline_switch_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center_vertical"
                        android:text="@string/save_sets_offline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/profile_save_offline_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_dark_mode_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/downriver_blue_100"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_dark_mode_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:weightSum="3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center_vertical"
                        android:text="@string/dark_mode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="end"
                        android:text="@string/dark_mode_theme"
                        android:textColor="@color/downriver_blue_300"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_log_out_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/downriver_blue_100"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_log_out_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/profile_log_out_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center"
                        android:text="@string/log_out"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/downriver_blue_100"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_about_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/ripple_linear_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintBottom_toTopOf="@id/profile_version_ll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center"
                        android:text="@string/about"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_version_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_about_ll">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="bottom"
                        android:text="@string/version"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="top"
                        android:text="@string/app_version"
                        android:textColor="@color/downriver_blue_300"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_username_title" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_delete_account_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/carnation_red_200"
                android:clickable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_delete_account_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/profile_delete_account_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rem_regular"
                        android:gravity="center"
                        android:text="@string/delete_account"
                        android:textColor="@color/carnation_red_700"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
