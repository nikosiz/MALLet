<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corners_rounded"
    android:orientation="vertical"
    android:id="@+id/confirmAccount_main_ll"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/confirmAccount_title_tv"
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Now it is time to confirm your account"
        android:textColor="@color/primaryTextColor"
        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/confirmAccount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open email application and click the link we sent you to confirm registration"
        android:textColor="@color/secondaryTextColor"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/confirmAccount_cancel_confirm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirmAccount_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ripple"
            android:text="Do it later"
            android:textColor="@color/danube_blue_400"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/confirmAccount_open_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_ripple"
            android:text="Open email"
            android:textColor="@color/secondaryTextColor"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:drawableTint="@color/danube_blue_800" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>