<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_top_corners_rounded"
    android:orientation="vertical"
    android:padding="30dp"
    android:paddingHorizontal="30dp"
    android:theme="@style/Base.Theme.MALLet">

    <TextView
        android:id="@+id/change_theme_enter_password_titleTv"
        style="@style/BasicBoldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="App theme"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp" />

    <View
        android:id="@+id/change_theme_view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RadioGroup
        android:id="@+id/change_theme_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/system_default_rb"
            style="@style/CustomRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System default"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/light_theme_rb"
            style="@style/CustomRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light theme"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/dark_theme_rb"
            style="@style/CustomRadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark theme"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:id="@+id/change_theme_cancel_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_theme_cancel_btn"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_ripple"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/change_theme_confirm_btn"
            style="@style/BasicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_ripple"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text="@string/ok"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>