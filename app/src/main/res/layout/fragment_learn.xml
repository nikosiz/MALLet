<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/learn_mainLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/learn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/danube_blue_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/learn_toolbarTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one_regular"
            android:text="Learn"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/learn_saveIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:contentDescription="set options"
            android:focusable="true"
            android:src="@drawable/ic_check"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/learn_optionsIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_ripple"
            android:clickable="true"
            android:contentDescription="set options"
            android:focusable="true"
            android:src="@drawable/ic_settings"
            app:tint="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/learn_contentsLl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learn_toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="0dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/learn_questionTv"
                    style="@style/BasicBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="content of the question"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    style="@style/BasicTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose the correct term"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/learn_answerOneBtn"
                        style="@style/SocialButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:drawableLeft="@drawable/ic_one"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:text="Option 1"

                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/learn_answerTwoBtn"
                        style="@style/SocialButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:drawableLeft="@drawable/ic_two"
                        android:drawableTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:text="Option 2"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/learn_answerThreeBtn"
                        style="@style/SocialButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:drawableLeft="@drawable/ic_three"
                        android:drawableTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:text="Option 3"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/learn_answerFourBtn"
                        style="@style/SocialButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:drawableLeft="@drawable/ic_four"
                        android:drawableTint="@color/colorPrimary"
                        android:gravity="start|center"
                        android:text="Option 4"
                        android:textAllCaps="false" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/learn_questionCounterTv"
            style="@style/BasicTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="number of questions"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>