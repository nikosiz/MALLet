<!-- res/layout/card_group.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flashcard_mainLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/bg_corners_rounded"
    android:gravity="center_vertical"
    android:maxHeight="130dp"
    android:minHeight="120dp"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="100dp">

    <TextView
        android:id="@+id/flashcard_termTv"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rem_regular"
        android:gravity="center"
        android:text="TERM"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <View
        android:id="@+id/flashcard_aboveDefinitionView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/flashcard_definitionTv"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rem_regular"
        android:gravity="center"
        android:text="DEFINITION"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="gone" />

    <View
        android:id="@+id/flashcard_aboveTranslationView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/flashcard_translationTv"
        style="@style/BasicTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rem_regular"
        android:gravity="center"
        android:text="TRANSLATION"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>