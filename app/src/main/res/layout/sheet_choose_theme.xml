<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_corners_rounded"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/choose_theme_enter_password_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rem_bold"
        android:text="Choose theme"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/choose_theme_view_0"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_enter_password_title_tv" />

    <TextView
        android:id="@+id/choose_theme_enter_password_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rem_regular"
        android:text="Choose the application theme"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_view_0" />

    <View
        android:id="@+id/choose_theme_view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_enter_password_tv" />

    <LinearLayout
        android:id="@+id/choose_theme_checkboxes_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_view_1">

        <CheckBox
            android:id="@+id/choose_mode_system_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System default" />

        <CheckBox
            android:id="@+id/choose_mode_light_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light" />

        <CheckBox
            android:id="@+id/choose_mode_dark_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark" />
    </LinearLayout>

    <View
        android:id="@+id/choose_theme_view_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_checkboxes_ll" />

    <LinearLayout
        android:id="@+id/choose_theme_cancel_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_view_2">

        <TextView
            android:id="@+id/choose_theme_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ripple_text_btn"
            android:text="@string/cancel"
            android:textColor="@color/downriver_blue_500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/choose_theme_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ripple_text_btn"
            android:text="@string/ok"
            android:textColor="@color/downriver_blue_500"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/choose_theme_view_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_theme_cancel_confirm_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>