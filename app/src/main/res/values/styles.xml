<?xml version="1.0" encoding="utf-8"?><!-- themes.xml -->

<resources>

    <style name="AppLogoStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:autoSizeMaxTextSize">300sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_logo</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textColor">@color/downriver_blue_500</item>
    </style>

    <style name="BasicSubTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textColor">@color/downriver_blue_300</item>
    </style>

    <style name="BasicBoldTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rem_bold</item>
        <item name="android:textColor">@color/downriver_blue_500</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/downriver_blue_500</item>
        <item name="android:textColor">@color/downriver_blue_500</item>
    </style>

    <style name="BasicButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@null</item>
        <item name="android:color">@color/downriver_blue_500</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:background">@drawable/background_basic_btn</item>
    </style>

    <style name="RoundButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@null</item>
        <item name="android:color">@color/downriver_blue_500</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:background">@drawable/background_round_btn</item>
    </style>

    <style name="SocialButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/downriver_blue_500</item>
        <item name="android:radius">5dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:background">@drawable/background_social_btn</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.Material3.CompoundButton.CheckBox">

        <!-- Customize text appearance -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton
        </item>
        <!-- Customize padding -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>

        <!-- Customize other attributes as needed -->
        <item name="android:gravity">center_vertical</item>
    </style>
</resources><!--
