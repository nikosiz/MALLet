<?xml version="1.0" encoding="utf-8"?><!-- themes.xml -->

<resources>

    <style name="AppLogoStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:autoSizeMaxTextSize">300sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_logo</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="BasicSubTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textColor">@color/downriver_blue_300</item>
    </style>

    <style name="BasicBoldTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rem_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/danube_blue_800</item>
    </style>

    <style name="BasicButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@null</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rem_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:background">@drawable/bg_basic_btn</item>
